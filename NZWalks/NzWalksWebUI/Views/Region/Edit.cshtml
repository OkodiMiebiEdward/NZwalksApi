@model NzWalksWebUI.Models.DTO.RegionDto

<h1>Edit Regions</h1>
@if(Model is not null)
{
    <form method="post">
        <div class="mt-3">
            <label class="form-label" for="code">Code:</label>
            <input type="text" id="code" class="form-control" asp-for="Id" readonly/>
        </div>


        <div class="mt-3">
            <label class="form-label" for="code">Code:</label>
            <input type="text" id="code" class="form-control" asp-for="Code" />
        </div>

        <div class="mt-3">
            <label class="form-label" for="name">Name:</label>
            <input type="text" id="name" class="form-control" asp-for="Name" />
        </div>

        <div class="mt-3 mb-3">
            <label class="form-label" for="image">Image Url:</label>
            @if(Model.RegionImageUrl is null)
            {
              <input type="text" id="image" class="form-control" asp-for="RegionImageUrl" readonly/>
            }
            else
            {
              <input type="text" id="image" class="form-control" asp-for="RegionImageUrl"/>
            }
        </div>

        <div class="d-flex justify-content-between mt-3">
            <button type="submit" class="btn btn-success">Update</button>
            <button type="submit" class="btn btn-danger" asp-controller="Region" asp-action="Delete">Delete</button>
        </div>
    </form>
}
