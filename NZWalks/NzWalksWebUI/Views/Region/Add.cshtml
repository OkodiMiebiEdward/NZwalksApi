@model NzWalksWebUI.Models.AddRegionViewModel



<h1 class="mt-3">Add Region</h1>
<form method="post" >
        <div class="mt-3">
            <label class="form-label"  for="code">Code:</label>
            <input type="text" id="code" class="form-control" asp-for="Code"/>
        </div>

        <div class="mt-3">
             <label class="form-label" for="name">Name:</label>
             <input type="text" id="name" class="form-control" asp-for="Name"/>
        </div>

        <div class="mt-3 mb-3">
            <label class="form-label" for="image">Image Url:</label>
            <input type="text" id="image" class="form-control" asp-for="RegionImageUrl"/>
        </div>

        <button type="submit" class="btn btn-success">Save</button>
</form>